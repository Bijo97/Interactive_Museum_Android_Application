<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.xtalker.manprotest.Signup"
        android:background="#ffffff">

        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:text="Username" />

        <EditText
            android:id="@+id/edEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEmail"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:gravity="center"
            android:hint="Masukkan Username"
            android:inputType="textEmailAddress"
            android:selectAllOnFocus="true" />

        <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPw"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/edEmail"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/edPw"
            android:hint="Masukkan Password"
            android:layout_below="@+id/tvPw"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Re-Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRePw"
            android:layout_below="@+id/edPw"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edRePw"
            android:selectAllOnFocus="true"
            android:hint="Masukkan Kembali Password"
            android:layout_below="@+id/tvRePw"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:text="Nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNama"
            android:layout_below="@+id/edRePw"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/edNama"
            android:selectAllOnFocus="true"
            android:hint="Masukkan Nama Lengkap"
            android:layout_below="@+id/tvNama"
            android:layout_centerHorizontal="true"/>

        <Button
            android:text="Sign Up"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/sign_up"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/radioButton"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tvUmur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Umur"
            android:layout_below="@+id/edNama"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/edUmur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edNama"
            android:layout_below="@+id/tvUmur"
            android:ems="10"
            android:hint="Masukkan Umur Anda"
            android:inputType="number"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            android:layout_below="@+id/edUmur"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edUmur"
            android:layout_below="@+id/tvGender"
            android:text="Laki-laki" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/radioButton"
            android:layout_alignBottom="@+id/radioButton"
            android:layout_alignEnd="@+id/edUmur"
            android:text="Perempuan" />

    </RelativeLayout>
    </ScrollView>
